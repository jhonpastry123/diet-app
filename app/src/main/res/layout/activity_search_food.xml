        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_30"
            android:layout_marginRight="@dimen/space_30"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_40"
                android:layout_marginTop="@dimen/space_15"
                android:background="@drawable/back_activity_item"
                android:orientation="horizontal">

                <SearchView
                    android:id="@+id/search_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/imgSearch"
                    android:layout_width="@dimen/space_27"
                    android:layout_height="@dimen/space_27"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/space_10"
                    android:src="@drawable/ic_search"
                    android:visibility="gone" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/space_10"
                    android:background="@android:color/transparent"
                    android:hint="ΠΑΠ"
                    android:inputType="text"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:visibility="gone"
                    android:textCursorDrawable="@drawable/cursor"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/space_10">
                <LinearLayout
                    android:layout_width="@dimen/space_90"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_10"
                    android:layout_marginLeft="@dimen/space_20"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/foodbutton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_food_search1" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Τρόφιμα"
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="@dimen/space_90"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/space_10"
                    android:layout_marginLeft="@dimen/space_10"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/reciepbutton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_food_search2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Γεύματα"
                        android:textColor="@android:color/black"
                        android:textSize="13sp" />
                </LinearLayout>
                <ImageView
                    android:layout_width="@dimen/space_70"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:layout_marginTop="@dimen/space_30"
                    android:src="@drawable/ic_curiousgirl"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorText1"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@drawable/back_shadow_reverse"/>
